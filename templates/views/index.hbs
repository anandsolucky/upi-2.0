<html>
    <head>
        <title>UPI 2.0</title>
        <link rel='stylesheet' type="text/css" href="/bootstrap/dist/css/bootstrap.css" />
        <link rel='stylesheet' type="text/css" href="/css/style.css" />
    </head>
    <body id='body'>
        <div class="container">
            <div id='innerDiv' class="jumbotron">
                <h1>UPI 2.0</h1>
                <br><br>
                {{>header}}
                <br><br>
                <form id="rgstr-form" method="GET">
                    <div class="form-group">
                        <label for="Enter your Name">Name</label>
                        <input type="Location" class="form-control" id="name-input" aria-describedby="emailHelp" placeholder="eg. Anand Solanki" required>
                    </div>
                    <div class="form-group">
                        <label for="Enter Username">Username</label>
                        <input type="Location" class="form-control" id="username-input" aria-describedby="emailHelp" placeholder="eg. anand26" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="password-input" placeholder="Password">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your data with anyone else.</small>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                <br>
            </div>
        </div>
        
        <script src="/js/reg-client.js"></script>    
    </body>
</html>
